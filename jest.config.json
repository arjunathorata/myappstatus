{
  "testEnvironment": "node",
  "coverageDirectory": "coverage",
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/app.js",
    "!src/config/**",
    "!src/**/*.test.js"
  ],
  "coverageReporters": [
    "text",
    "lcov",
    "html"
  ],
  "testMatch": [
    "**/tests/**/*.test.js",
    "**/src/**/*.test.js"
  ],
  "setupFilesAfterEnv": [
    "<rootDir>/tests/setup.js"
  ]
}